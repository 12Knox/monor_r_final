function like_function(id, button, heart, sum) {
  if (button.hasClass("decrement")){
      $.ajax({url: "/likes", type: "delete", data: {photo_id: id, dataType: "json"}})
      .done(function(data){
        button.removeClass("decrement").addClass("increment")
        heart.attr("src", "<%= image_path('before_liked.png') %>")
        sum.text(data["count"])
      })
    }else{
      $.ajax({url: "/likes", type: "post", data: {photo_id: id, dataType: "json"}})
      .done(function(data){
        button.removeClass("increment").addClass("decrement")
        heart.attr("src", "<%= image_path('liked.png') %>")
        console.log(data)
        sum.text(data["count"])
      })
    }
}